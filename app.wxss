/**app.wxss**/
/* 颜色变量 */
page {
  --redColor: #BF3F3F;
  --mainColor: #C59A6D;
  --bgColor: #F3EFEC;
  --greenColor: #A0B683;
  --greyColor: #BDBDBD;
}

.w-100 {
  width: 100%;
}

.h-100 {
  height: 100%;
}

.container {
  padding: 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

view {
  box-sizing: border-box;
  color: #262626;
}

.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.justify-between {
  justify-content: space-between;
}

.justify-center {
  justify-content: center;
}

.align-center {
  align-items: center;
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}