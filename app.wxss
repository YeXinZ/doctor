/**app.wxss**/
/* 颜色变量 */
page {
  --redColor: #BF3F3F;
  --mainColor: #C59A6D;
  --bgColor: #F3EFEC;
  --greenColor: #A0B683;
  --greyColor: #BDBDBD;
  --borderColor: #eeeeee;
  --pageColor: #F9F7F6;
  --wrapBorder: #76664D;
}

view {
  box-sizing: border-box;
  color: #333333;
  font-size: 30rpx;
}

text {
  color: #333333;
  font-size: 30rpx;
}

.w-100 {
  width: 100%;
}

.h-100 {
  height: 100%;
}

.container {
  padding: 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

view {
  box-sizing: border-box;
  color: #262626;
}

.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.justify-between {
  justify-content: space-between;
}

.justify-center {
  justify-content: center;
}

.align-center {
  align-items: center;
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.text-overflow {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.load_bottom {
  height: 70rpx;
  line-height: 70rpx;
}

.load_bottom text {
  font-size: 26rpx;
  color: #666666;
}

.submit_btn {
  background-color: var(--redColor) !important;
  color: #ffffff;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
}

.upload_btn {
  background-color: var(--mainColor) !important;
  color: #ffffff;
  margin: 0;
}

.van-tab view {
  color: #333333;
}

.van-tab--active view {
  color: #ffffff;
}

.van-radio__icon--checked {
  background-color: var(--redColor) !important;
  border-color: var(--redColor) !important;
}

.van-radio .van-icon {
  color: #ffffff !important;
}

.van-button__text {
  color: inherit;
}