/**app.wxss**/
.container {
  padding: 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

view {
  box-sizing: border-box;
  color: #262626;
}

.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.justify-between {
  justify-content: space-between;
}

.justify-center {
  justify-content: center;
}

.align-center {
  align-items: center;
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.menu_item {
  width: 100%;
  height: 160rpx;
  padding-left: 20%;
  background-color: #F5F4EB;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.menu_item image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}