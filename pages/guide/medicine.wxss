/* pages/guide/medicine.wxss */
.medicine_guide {
  min-height: 100vh;
  padding: 20rpx;
  background-color: var(--pageColor);
}

.list_item {
  padding: 0 10rpx 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.05);
}

.list_item+.list_item {
  margin-top: 20rpx;
}

.list_item .title {
  font-weight: bolder;
  padding: 20rpx;
  border-bottom: 1px solid var(--borderColor);
  margin-bottom: 10rpx;
}

.list_item .content {
  margin-top: 20rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
}