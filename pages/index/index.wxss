/**index.wxss**/
.menu_item {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  width: 48%;
  height: 200rpx;
  border: 3rpx solid #e5e5e5;
  border-radius: 10rpx;
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.menu_item image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  z-index: 1;
  opacity: 0.6;
}

.menu_item text {
  position: absolute;
  z-index: 1;
  font-weight: bold;
  letter-spacing: 8px;
  line-height: 1.8;
  font-size: 36rpx;
}

.menu_item:first-of-type text {
  color: var(--redColor);
}

.module_header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 50rpx;
  margin-top: 30rpx;
}

.module_header text {
  font-weight: bold;
  font-size: 34rpx;
}

.module_header .more_btn {
  font-size: 26rpx;
  color: var(--mainColor);
}

.list_wrap {
  padding-top: 20rpx;
}